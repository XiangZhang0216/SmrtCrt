<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dip"
    app:cardCornerRadius="0dp"
    android:layout_margin="5dp"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/white">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="120dip"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:id="@+id/cart_item_imageview"
        android:layout_gravity="left" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/cartitemprogress"
        android:visibility="visible"/>
</RelativeLayout>


        <RelativeLayout
            android:layout_width="190dip"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:id="@+id/cart_item_textfields">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:maxLines="4"
                android:id="@+id/cart_item_textview"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="Cart Item Title"
                android:layout_marginTop="15dip"
                android:layout_marginLeft="10dp" />
            <!--TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:id="@+id/cart_item_owner"
                android:layout_gravity="top"
                android:textColor="@color/colorDarkGrey"
                android:textSize="12sp"
                android:text="Store:"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"!-->
            <!--TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/cart_item_summary"
                android:layout_gravity="top"
                android:textColor="@color/colorDarkGrey"
                android:textSize="12sp"
                android:text="This is a summary of the item and it will be a few sentences long."
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"!-->
            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cart_item_price"
                    android:layout_gravity="bottom"
                    android:textColor="@color/blue_light"
                    android:layout_marginLeft="10dip"
                    android:text="$0.00"
                    android:layout_marginTop="5dip" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cart_item_quantity"
                    android:layout_gravity="bottom"
                    android:textColor="@color/red_light"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:text="@string/qty"
                    android:layout_marginTop="5dp"/>
            </RelativeLayout>


        </RelativeLayout>
        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Button
                android:background="@color/white"
                android:id="@+id/cart_item_morebutton"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:paddingTop="10dp"
                android:drawableTop="@drawable/delete"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                 />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>